{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "assets/*": [ "assets/*" ],
      "icons/*": [ "assets/icons/*" ],
      "modules/*": [ "components/modules/*" ],
      "UI/*": [ "components/UI/*" ],
      "components/*": [ "components/*" ],
      "helpers/*": [ "helpers/*" ],
      "helpers": [ "helpers/index" ],
      "styles/*": [ "styles/*" ]
    }
  },
  "include": [
    "src",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
